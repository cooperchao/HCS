<div class="row top-buffer">
	<ol class="breadcrumb">
		<li class="active"><a href='javascript:;'>平台管理</a></li>
		<li class="active"><a href='javascript:;'>帳號設定</a></li>
		<li class="active"><a href='javascript:;'>督導員</a></li>
		<li class="active">編輯帳號</li>
	</ol>
</div>
<form class="row top-buffer" data-toggle="validator" role="form" >
	<div class="text-right">
		<input class="btn btn-default" type="button" value="取消">
		<a class="btn btn-success" id="change_supervisor">儲存</a>
	</div>
	<hr>
	<div class="row col-md-12 form-horizontal">
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">啟用狀態</label>
			<div class="col-md-10">
				<label class="radio-inline"><input type="radio" value="" name="EnableRadios" checked="">啟用</label>
				<label class="radio-inline"><input type="radio" value="" name="EnableRadios">停用</label>
			</div>
		</div>
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">個人相片</label>
			<div class="col-md-10">
				<img alt="" class="img-responsive img-thumbnail" src="http://placehold.it/200">
				<input class="help-block top-buffer" type="file" href="javascript:;">
			</div>
		</div>
		<div class="form-group form-inline">
			<label for="" class="col-md-2 control-label">帳號 Email</label>
			<div class="col-md-10">
				<input type="email" class="form-control" placeholder="">
			</div>
		</div>
		<div class="form-group form-inline">
			<label for="" class="col-md-2 control-label">密碼</label>
			<div class="col-md-10">
				<!-- <input type="password" class="form-control" placeholder=""> -->
				<a class="btn btn-default js__chang_input_pw" href="javascript:;" ><i class="fa fa-edit fa-lg"></i>&nbsp;修改密碼</a>
			</div>
		</div>
		<div class="form-group form-inline">
			<label for="" class="col-md-2 control-label">姓名</label>
			<div class="col-md-10">
				<input type="text" class="form-control" placeholder="">
			</div>
		</div>
		<div class="form-group form-inline">
			<label for="" class="col-md-2 control-label">手機電話</label>
			<div class="col-md-10">
				<input type="tel" class="form-control" placeholder="">
			</div>
		</div>
		<div class="form-group form-inline">
			<label for="" class="col-md-2 control-label">市內電話</label>
			<div class="col-md-10">
				<input type="tel" class="form-control" placeholder="">
			</div>
		</div>
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">隸屬主管</label>
			<div class="col-md-10">
				<div class="checkbox">
					<label>
						<input type="checkbox" value=""> 全選</label>
				</div>
				<br>
				<% 3.times do %>
				<label class="checkbox-inline">
					<input type="checkbox" value="">張某某</label>
				<% end %>
				<input type="tel" class="form-control" placeholder="">
			</div>
		</div>
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">所屬居服員</label>
			<div class="col-md-10">
				<div class="checkbox">
					<label>
						<input type="checkbox" value=""> 全選</label>
				</div>
				<br>
				<% 4.times do %>
				<% 5.times do %>
				<label class="checkbox-inline">
					<input type="checkbox" value="">張某某</label>
				<% end %>
				<br>
				<% end %>
			</div>
		</div>
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">服務個案</label>
			<div class="col-md-10">
				<div class="checkbox">
					<label>
						<input type="checkbox" value=""> 全選</label>
				</div>
				<br>
				<% 4.times do %>
				<% 5.times do %>
				<label class="checkbox-inline">
					<input type="checkbox" value="">張某某</label>
				<% end %>
				<br>
				<% end %>
			</div>
		</div>
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">身分別(一)</label>
			<div class="col-md-10">
				<select class="form-control">
					<option value=""></option>
					<option value="">一般民眾</option>
					<option value="">原住民</option>
					<option value="">低收入戶</option>
					<option value="">其他</option>
				</select>
			</div>
		</div>
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">身分別(二)</label>
			<div class="col-md-10">
				<select class="form-control">
					<option value=""></option>
					<option value="">中高齡</option>
					<option value="">非中高齡</option>
				</select>
			</div>
		</div>
		<div class="form-group form-inline">
			<label class="col-md-2 control-label">性別</label>
			<div class="col-md-10">
				<label class="radio-inline"><input type="radio" value="" name="SexRadios" checked="">男性</label>
				<label class="radio-inline"><input type="radio" value="" name="SexRadios">女性</label>
			</div>
		</div>


		<div id="change_supervisor_box">
			<div class="modal-header">
				<h4 class="modal-title">變更督導員</h4>
			</div>
			<div class="modal-body">
				<% 3.times do %>
				<div class="row">
					<label class="col-md-2 text-right">
						<span>姓名</span>
					</label>
					<div class="col-md-3">
						<input type="text" class="form-control" value="張某某" disabled>
					</div>
					<label class="col-md-2 text-right">
						<span>督導員</span>
					</label>
					<div class="col-md-5">
						<select class="form-control">
							<option>李督導</option>
							<option>李督導</option>
							<option>李督導</option>
						</select>
					</div>
				</div>
				<% end %>
			</div>
			<div class="modal-footer">
				<div class="row">
					<div class="col-md-12 text-right">
						<a href="#" class="btn btn-default">取消</a>
						<a href="#" class="btn btn-primary">儲存</a>
					</div>
				</div>
			</div>
		</div>


	</div>
</form>