<div class="row top-buffer">
	<div class="col-md-6 text-left">
		<ol class="breadcrumb">
			<li>
				<a href="#">系統設定</a>
			</li>
			<li class="active">服務未遇</li>
		</ol>
	</div>
	<div class="col-md-6 text-right">
		<input class="btn btn-default" type="button" value="取消">
		<input class="btn btn-default" type="submit" value="儲存">
	</div>
</div>
<hr>
<div class="row">
	<form class="col-md-8 col-md-offset-2">
		<h4>自費金額</h4>
		<hr>
		<ul class="list-unstyled">
			<% for i in 1..4 do %>
			<li class="setting_item setting_item-log">
				<div class="col-md-1">
					<a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
				</div> 
				<div class="col-md-8">
					<div class="row">
						<div class="col-md-11">
							<input type="text" class="form-control" placeholder="自費金額">
						</div>
						<div class="col-md-1">
							元
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<input type="text" class="form-control" placeholder="<%= i %>">
				</div>
			</li>
			<% end %>
			<li class="setting_item setting_item-log">
				<div class="col-md-1">
				</div> 
				<div class="col-md-8">
					<a href="javascript:;" class="text-success">＋ 新增項目</a>
				</div>
			</li>
			<li class="setting_item setting_item-log has-success">
				<div class="col-md-1">
				</div> 
				<div class="col-md-8">
					<div class="row">
						<div class="col-md-11">
							<input type="text" class="form-control" placeholder="自費金額">
						</div>
						<div class="col-md-1">
							元
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<button class="btn btn-success btn-block">新增</button>
				</div>
			</li>
		</ul>
		<h4>居服員薪資</h4>
		<hr>
		<ul class="list-unstyled">
			<% for i in 1..4 do %>
			<li class="setting_item setting_item-log">
				<div class="col-md-1">
					<a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
				</div>
				<div class="col-md-8">
					<div class="row">
						<div class="col-md-6">
							<input type="text" class="form-control" placeholder="居服員薪資">
						</div>
						<div class="col-md-1 text-center">
							<span> * </span>
						</div>
						<div class="col-md-5">
							<input type="text" class="form-control" placeholder="居服薪資比例">
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<input type="text" class="form-control" placeholder="<%= i %>">
				</div>
			</li>
			<% end %>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <a href="javascript:;" class="text-success">＋ 新增項目</a>
                </div>
            </li>
            <li class="setting_item setting_item-log has-success">
                <div class="col-md-1">
                </div>
				<div class="col-md-8">
					<div class="row">
						<div class="col-md-6">
							<input type="text" class="form-control" placeholder="居服員薪資">
						</div>
						<div class="col-md-1 text-center">
							<span> * </span>
						</div>
						<div class="col-md-5">
							<input type="text" class="form-control" placeholder="居服薪資比例">
						</div>
					</div>
				</div>
                <div class="col-md-3">
                    <button class="btn btn-success btn-block">新增</button>
                </div>
            </li>
		</ul>
	</form>
</div>