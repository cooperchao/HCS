<div class="row top-buffer">
    <div class="col-md-6 text-left">
        <ol class="breadcrumb">
            <li>
                <a href="#">系統設定</a>
            </li>
            <li class="active">繳費方式</li>
        </ol>
    </div>
    <div class="col-md-6 text-right">
        <input class="btn btn-default" type="button" value="取消">
        <input class="btn btn-default" type="submit" value="儲存">
    </div>
</div>
<hr>
<div class="row">
    <form class="col-md-8 col-md-offset-2">
        <ul class="list-unstyled">
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <label for="" class="form-group">收費週期</label>
                </div>
                <div class="col-md-3">
                    <label for="" class="form-group"></label>
                </div>
            </li>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <label class="form-group">
                        <input type="radio"></input> 前月 1 日至前月最後一日
                    </label>
                </div>
                <div class="col-md-3">
                    <label for="" class="form-group"></label>
                </div>
            </li>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div>
                <div class="col-md-8">
                    <label class="form-group form-inline">
                        <input type="radio"></input> 每月
                        <input type="text" class="form-control"> 日前結算 ( 例如 : 設定每月 1 日前結算，意謂前月的 30、31 日或 28 日結算 )
                    </label>
                </div>
                <div class="col-md-3">
                    <label class="form-group"></label>
                </div>
            </li>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <label class="form-group">收費訊息發送時間</label>
                </div>
                <div class="col-md-3">
                    <label for="" class="form-group"></label>
                </div>
            </li>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <label class="form-group form-inline"> 每月 <input type="text" class="form-control"> 日發送</label>
                </div>
                <div class="col-md-3">
                    <label for="" class="form-group"></label>
                </div>
            </li>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <label for="" class="form-group">繳費方式</label>
                </div>
                <div class="col-md-3">
                    <label for="" class="form-group">順位</label>
                </div>
            </li>
            <% for i in 1..2 do %>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                    <a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
                </div> 
                <div class="col-md-8">
                    <input type="text" class="form-control" placeholder="系統帶預設值">
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" placeholder="<%= i %>">
                </div>
            </li>
            <% end %>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <a href="javascript:;" class="text-success">＋ 新增項目</a>
                </div>
            </li>
            <li class="setting_item setting_item-log has-success">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <input type="text" class="form-control" placeholder="輕輸入項目名稱">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-success btn-block">新增</button>
                </div>
            </li>
        </ul>
    </form>
</div>