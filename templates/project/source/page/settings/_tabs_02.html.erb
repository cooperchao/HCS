<style>
	.nextYear{float:right}
	.top-buffer{margin-top:15px}
	.rc-Calendar-header{padding:1em 0}

	/* #3d85cc - 100*/
	/* #649dd6 - 80%*/
	div.rc-Month {margin: 0 0 50px 50px} 
	div.rc-Week-number{color:#3d85cc}
	div.rc-Month--current .rc-Month-header{color:#3d85cc}
	div.n_holiday{color:white;background-color:#77a9db}
	div.rc-Day--current{color:white;background-color:#39ce8c}
	div.rc-Day:hover{color:white;background-color:#3d85cc}
	div.rc-Day:hover.rc-Day--outside{color:#eee;background-color:white} 
	
</style>
<div class="row top-buffer">
	<label for="" class="control-label">本年度周期性假日設定</label>
	<div id="filter_weeks_holiday">
		<div class="form-inline">
			<label class="checkbox-inline"><input type="checkbox" value="0">日</label>
			<label class="checkbox-inline"><input type="checkbox" value="1">一</label>
			<label class="checkbox-inline"><input type="checkbox" value="2">二</label>
			<label class="checkbox-inline"><input type="checkbox" value="3">三</label>
			<label class="checkbox-inline"><input type="checkbox" value="4">四</label>
			<label class="checkbox-inline"><input type="checkbox" value="5">五</label>
			<label class="checkbox-inline"><input type="checkbox" value="6">六</label>
			<select id="holiday_type" class="form-control">
				<option value="weekday">平日</option>
				<option value="holiday">假日</option>
			</select>
			<button type="button" id="btn_filter_weeks_holiday" class="btn btn-primary">設定</button>
		</div>
	</div>
	<hr>
</div>
<div class="row">
	<div id="app"></div>
</div>

<!-- holiday_dialog_days -->
<div id="holiday_dialog_days" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title">單次假日設定</h4>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<h5><span></span> - 要設定為?</h5>
				</div>
				<div class="form-group form-inline">
					<label><input type="radio" name="holiday_days" checked>平日</label>
					<label>
						<input type="radio" name="holiday_days">假日
						<input type="text" name="holiday_names" class="form-control">
					</label>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
				<button type="button" class="btn btn-primary" id="btn_holiday_dialog_days">設定</button>
			</div>
		</div>
	</div>
</div>
