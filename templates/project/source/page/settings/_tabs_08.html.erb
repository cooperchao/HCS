<div class="row top-buffer">
    <div class="col-md-6 text-left">
        <ol class="breadcrumb">
            <li>
                <a href="#">系統設定</a>
            </li>
            <li class="active">居旅費用</li>
        </ol>
    </div>
    <div class="col-md-6 text-right">
        <input class="btn btn-default" type="button" value="取消">
        <input class="btn btn-default" type="submit" value="儲存">
    </div>
</div>
<div class="row">
    <div class="form-group col-md-8 col-md-offset-2">
        <form class="col-md-12">
            <h4>基本工時</h4>
            <ul class="list-unstyled">
                <li class="setting_item">
                    <div class="col-md-6">
                        <label for="" class="form-group">時間</label> 
                        <input type="text" class="form-control datepicker" placeholder="">
                    </div> 
                    <div class="col-md-6">
                        <label for="" class="form-group">工時</label>
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                </li>
                <% 5.times do %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        yyyy/mm/dd
                    </div>
                    <div class="col-md-6 text-right">
                        999
                    </div>
                </li>
                <% end %>
            </ul>
            <h4>證照津貼</h4>
            <ul class="list-unstyled">
                <li class="setting_item">
                    <div class="col-md-6">
                        <label for="" class="form-group">時間</label> 
                        <input type="text" class="form-control datepicker" placeholder="">
                    </div> 
                    <div class="col-md-6">
                        <label for="" class="form-group">金額</label>
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                </li>
                <% 5.times do %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        yyyy/mm/dd
                    </div>
                    <div class="col-md-6 text-right">
                        999
                    </div>
                </li>
                <% end %>
            </ul>
            <h4>服務工資</h4>
            <ul class="list-unstyled">
                <li class="setting_item">
                    <div class="col-md-6">
                        <label for="" class="form-group">時間</label> 
                        <input type="text" class="form-control datepicker" placeholder="">
                    </div> 
                    <div class="col-md-6">
                        <label for="" class="form-group">金額</label>
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                </li>
                <% 5.times do %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        yyyy/mm/dd
                    </div>
                    <div class="col-md-6 text-right">
                        999
                    </div>
                </li>
                <% end %>
            </ul>
            <hr>
            <h4>其他獎金編修</h4>
            <ul class="list-unstyled">
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-8">
                        <label for="" class="form-group">獎金類別</label>
                    </div>
                    <div class="col-md-3">
                        <label for="" class="form-group">順位</label>
                    </div>
                </li>
                <% for i in 1..2 do %>
                <li class="setting_item setting_item-log text-right">
                    <div class="col-md-1">
                        <a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
                    </div> 
                    <div class="col-md-8">
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="<%= i %>">
                    </div>
                </li>
                <% end %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-8">
                        <a href="javascript:;" class="text-success">＋ 新增項目</a>
                    </div>
                </li>
                <li class="setting_item setting_item-log has-success">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-8">
                        <input type="text" class="form-control" placeholder="輕輸入項目名稱">
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-success btn-block">新增</button>
                    </div>
                </li>
            </ul>
        </form>
    </div>
</div>