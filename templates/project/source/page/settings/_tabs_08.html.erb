<div class="row top-buffer">
    <div class="col-md-6 text-left">
        <ol class="breadcrumb">
            <li>
                <a href="#">系統設定</a>
            </li>
            <li class="active">居旅費用</li>
        </ol>
    </div>
    <div class="col-md-6 text-right">
        <input class="btn btn-default" type="button" value="取消">
        <input class="btn btn-default" type="submit" value="儲存">
    </div>
</div>
<hr>
<div class="row">
    <div class="form-group col-md-8 col-md-offset-2">
        <form class="col-md-12">
            <h4>工時與薪資設定</h4>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item">
                    <div class="col-md-6">
                        <div class="col-md-4">
                            基本工時
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control datepicker-months" placeholder="">
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="col-md-8">
                            <input type="text" class="form-control" placeholder="系統帶預設值">
                        </div>
                        <div class="col-md-4">
                            小時
                        </div>
                    </div>
                </li>
                <% 5.times do %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            yyyy/mm
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="col-md-8">
                            999
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </li>
                <% end %>
            </ul>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item">
                    <div class="col-md-6">
                        <div class="col-md-4">
                            基本工資
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control datepicker" placeholder="">
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="col-md-8">
                            <input type="text" class="form-control" placeholder="系統帶預設值">
                        </div>
                        <div class="col-md-4">
                            元 / 小時
                        </div>
                    </div>
                </li>
                <% 5.times do %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            yyyy/mm/dd
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="col-md-8">
                            999
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </li>
                <% end %>
            </ul>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item">
                    <div class="col-md-6">
                        <div class="col-md-4">
                            服務工資
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control datepicker" placeholder="">
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="col-md-8">
                            <input type="text" class="form-control" placeholder="系統帶預設值">
                        </div>
                        <div class="col-md-4">
                            元
                        </div>
                    </div>
                </li>
                <% 5.times do %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            yyyy/mm/dd
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="col-md-8">
                            999
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </li>
                <% end %>
            </ul>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item">
                    <div class="col-md-6">
                        <div class="col-md-4">
                            交通費 - 計時
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control datepicker" placeholder="">
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="col-md-8">
                            <input type="text" class="form-control" placeholder="系統帶預設值">
                        </div>
                        <div class="col-md-2">
                            元 /小時
                        </div>
                        <div class="col-md-2">
                            <label class="radio-inline">
                                <input type="radio" name="radio1" value="option1"> 啟用
                            </label>                           
                        </div>
                    </div>
                </li>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            yyyy/mm/dd
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="col-md-8">
                            999
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </li>
            </ul>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item">
                    <div class="col-md-6">
                        <div class="col-md-4">
                            交通費 - 計次
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control datepicker" placeholder="">
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="col-md-8">
                            <input type="text" class="form-control" placeholder="系統帶預設值">
                        </div>
                        <div class="col-md-2">
                            元 /次
                        </div>
                        <div class="col-md-2">
                            <label class="radio-inline">
                                <input type="radio" name="radio1" value="option2" checked> 啟用
                            </label>                           
                        </div>
                    </div>
                </li>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            yyyy/mm/dd
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="col-md-8">
                            999
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </li>
            </ul>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item">
                    <div class="col-md-6">
                        <div class="col-md-4">
                            每月加班時數上限
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control datepicker-months" placeholder="">
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="col-md-8">
                            <input type="text" class="form-control" placeholder="系統帶預設值">
                        </div>
                        <div class="col-md-4">
                            元
                        </div>
                    </div>
                </li>
                <li class="setting_item setting_item-log">
                    <div class="col-md-6 text-right">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            yyyy/mm
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="col-md-8">
                            999
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </li>
            </ul>
            <h4 class="top-buffer">其他計次費用設定</h4>
            <hr>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-8">
                        <label for="" class="form-group">項目名稱</label>
                    </div>
                    <div class="col-md-3">
                        <label for="" class="form-group">順位</label>
                    </div>
                </li>
                <% for i in 1..2 do %>
                <li class="setting_item setting_item-log text-right">
                    <div class="col-md-1">
                        <a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
                    </div> 
                    <div class="col-md-8">
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="<%= i %>">
                    </div>
                </li>
                <% end %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-8">
                        <a href="javascript:;" class="text-success">＋ 新增項目</a>
                    </div>
                </li>
                <li class="setting_item setting_item-log has-success">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-8">
                        <input type="text" class="form-control" placeholder="請輸入項目名稱">
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-success btn-block">新增</button>
                    </div>
                </li>
            </ul>
            <h4>證照加給</h4>
            <hr>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-4">
                        <label for="" class="form-group">證照類別</label>
                    </div>
                    <div class="col-md-4">
                        <label for="" class="form-group">條件</label>
                    </div>
                    <div class="col-md-2">
                        <label for="" class="form-group">金額</label>
                    </div>
                    <div class="col-md-1">
                        <label for="" class="form-group">順位</label>
                    </div>
                </li>
                <li class="setting_item setting_item-log text-right">
                    <div class="col-md-1">
                        <a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
                    </div> 
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                    <div class="col-md-4 text-left">
                        <label for="" class="form-inline">每月工時 <input type="text" class="form-control" placeholder=""> 小時以上</label>
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" placeholder="1">
                    </div>
                </li>
                <li class="setting_item setting_item-log text-right">
                    <div class="col-md-1">
                        <a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
                    </div> 
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                    <div class="col-md-4 text-left">
                        無
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-1">
                        <input type="text" class="form-control" placeholder="2">
                    </div>
                </li>
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-8">
                        <a href="javascript:;" class="text-success">＋ 新增項目</a>
                    </div>
                </li>
                <li class="setting_item setting_item-log has-success">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="請輸入項目名稱">
                    </div>
                    <div class="col-md-4">
                        <select class="form-control">
                            <option value="">無</option>
                            <option value="">工時</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-success btn-block">新增</button>
                    </div>
                </li>
            </ul>
            <h4 class="top-buffer">其他獎金編修</h4>
            <hr>
            <ul class="list-unstyled top-buffer">
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-8">
                        <label for="" class="form-group">獎金類別</label>
                    </div>
                    <div class="col-md-3">
                        <label for="" class="form-group">順位</label>
                    </div>
                </li>
                <% for i in 1..2 do %>
                <li class="setting_item setting_item-log text-right">
                    <div class="col-md-1">
                        <a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
                    </div> 
                    <div class="col-md-8">
                        <input type="text" class="form-control" placeholder="系統帶預設值">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="<%= i %>">
                    </div>
                </li>
                <% end %>
                <li class="setting_item setting_item-log">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-8">
                        <a href="javascript:;" class="text-success">＋ 新增項目</a>
                    </div>
                </li>
                <li class="setting_item setting_item-log has-success">
                    <div class="col-md-1">
                    </div> 
                    <div class="col-md-8">
                        <input type="text" class="form-control" placeholder="請輸入項目名稱">
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-success btn-block">新增</button>
                    </div>
                </li>
            </ul>
        </form>
    </div>
</div>