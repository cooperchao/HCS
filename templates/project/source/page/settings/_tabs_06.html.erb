<div class="row top-buffer">
    <div class="col-md-6 text-left">
        <ol class="breadcrumb">
            <li>
                <a href="#">系統設定</a>
            </li>
            <li class="active">結案原因</li>
        </ol>
    </div>
    <div class="col-md-6 text-right">
        <input class="btn btn-default" type="button" value="取消">
        <input class="btn btn-default" type="submit" value="儲存">
    </div>
</div>
<hr>
<div class="row">
    <form class="col-md-8 col-md-offset-2">
        <ul class="list-unstyled">
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div>
                <div class="col-md-8">
                    <label for="" class="form-group">結案原因</label>
                </div>
                <div class="col-md-3">
                    <label for="" class="form-group">順位</label>
                </div>
            </li>
            <% for i in 1..2 do %>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                    <a href="javascript:;"><i class="fa fa-2x fa-minus-circle text-danger"></i></a>
                </div> 
                <div class="col-md-8">
                    <input type="text" class="form-control" id="" placeholder="系統帶預設值">
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="" placeholder="<%= i %>">
                </div>
            </li>
            <% end %>
            <li class="setting_item setting_item-log">
                <div class="col-md-1">
                </div>
                <div class="col-md-8">
                    <a href="javascript:;" class="text-success">＋ 新增項目</a>
                </div>
            </li>
            <li class="setting_item setting_item-log has-success">
                <div class="col-md-1">
                </div> 
                <div class="col-md-8">
                    <input type="text" class="form-control" id="" placeholder="輕輸入項目名稱">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-success btn-block" id="">新增</button>
                </div>
            </li>
        </ul>
    </form>
</div>
